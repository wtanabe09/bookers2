
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h1>Editing Book</h1>
  <div class="error_explanation">
    <% if @book.errors.any? %>
      <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
      <% @book.errors.full_messages.each do |message| %>
        <ul>
          <li><%= message %></li>
        </ul>
      <% end %>
    <% end %>
  </div>
  <%= form_with model:@book, local:true do |f| %>
    <div class="form-group">
      <div class="feild_with_errors">
        <%= f.label :title, "Title" %>
      </div>
      <div class="field_with_errors">
        <%= f.text_field :title, class: "form-control book_title" %>
      </div>
    </div>
    <div class="form-group">
      <div class="field_with_errors">
        <%= f.label :body, "Opinion" %>
      </div>
      <div class="field_with_errors">
        <%= f.text_area :body, class: "form-control boo_body" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit 'Update Book', class: "btn btn-success" %>
    </div>
  <% end %>
  <%= link_to "Show", book_path(@book) %> |
  <%= link_to "Back", books_path %>
</div>
