<div class="container px-5 ps-sm-0">
  <div class="row">
    <%= render 'books/list', user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to(user_path(@show_book.user_id)) do %>
                <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "40x40" %><br>
                <%= @user.name %>
              <% end %>
            </td>
            <td><%= link_to @show_book.title, book_path(@show_book.id) %></td>
            <td><%= @show_book.body %></td>
            <% if user_signed_in? && @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@show_book), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@show_book), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

